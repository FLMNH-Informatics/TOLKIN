
<body>
<h1>Sign up as a new user</h1>
<br/>
<br/>
<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>
<% form_for @user, :url => users_path do |user_form| -%>

  <%= render :partial=>"form", :locals=>{	:user_form=> user_form, :show=>false }, :layout=>false%>
  <div style="float: right; width: 50%; white-space: nowrap">
    <br/>
  <b>Project Listing: Please select the projects you want to request access for.</b>
  <hr size="1" align="left" width="90%" color="grey   "></hr>
  
  <table id="projects">
    <tr>
      <th />
      <th>Name</th>
      <th>Website</th>
    </tr>
    <%= zero_projects_message %>
    <%= render :partial => 'project' , :collection => @projects, :locals => { :dispaly_check_box => true }  %>
  </table>
  <%= raw get_captcha(:options => {:theme => 'white'}) %>

  <p><%= submit_tag 'Sign up' %></p>
<% end -%>
  </div>
</body>

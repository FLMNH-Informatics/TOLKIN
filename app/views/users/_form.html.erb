      <label for="first_name">* First Name :</label>
      </td>
    <td class="tblColWidth">
     <%= user_form.text_field :first_name, :class=> 'txtSize'%>
    </td>
  </tr>
  <tr>
    <td style="white-space: nowrap">
      <label for="last_name">* Last Name :</label>
      </td>
    <td class="tblColWidth">
      <%= user_form.text_field :last_name, :class=> 'txtSize'%>
    </td>
  </tr>
  <%#end%>
  <tr>
    <td style="white-space: nowrap">
      <label for="institution">* Institution :</label>
      </td>
    <td class="tblColWidth">
       <%= user_form.text_field :institution, :class=> 'txtSize'%>
    </td>

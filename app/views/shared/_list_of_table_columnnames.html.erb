
<form name="taxa_col_form" action="/projects/<%= current_project.id %>/<%=controller_name%>.csv" method="get">
<table>
  <tr>
    <td></td>
    <td>
      <select name="report_format">
        <option value='xls'>Excel</option>
        <option value='csv'>CSV</option>
        <% if params[:controller] == "taxa" %>
          <option value='eol'>EOL XML</option>
        <% end %>
      </select>
    </td>
  </tr>
  <tr><td><input type="checkbox"  class="check_all"/></td><td> <input type="submit" /></td></tr>
 
 
  <%@count =0%>
  <%@table_col.each do  |name|%>
    <tr><td><input type="checkbox" name="select[]" value="<%=name%>"/></td><td><%=name%></td></tr>
    <%@count =@count+1%>
  <%end%>
  <tr><td><input type="checkbox" value="tolkin_url" name="select[]"/></td><td>Tolkin URL</td></tr>
</table>
  <div id="search_conditions" style="style:block"></div>

</form>
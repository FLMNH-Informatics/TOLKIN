<style type="text/css">
  .tax-cell {
    padding: 3px;
    border: 2px solid #FFFDF3
  }

  .tax-cell:hover {
    cursor: pointer;
    border: 2px solid black;
  }

  .tax-cell:hover span {
    text-decoration: underline
  }
</style>

<br />  
<span style="font-size:14px;font-weight:bold">Project: <%=h current_project.name %></span>&nbsp;&nbsp;
  <%- if current_user.username != 'public' %>
    <a id="edit_project_link" href="#">Edit</a><br />
  <%- end %>
   <br />


<table>
  <tr>
    <td class="tax-cell" style="text-align: center">
      <a href="<%= project_taxa_path(current_project) %>" style="width: 100%; height: 100%">
      <%= image_tag 'taxonomy.png', style: 'max-height: 225px' %><br /><br />
      <span style="font-size: 14px">Taxonomy (<%= @taxa.count %> entries)</span>
      </a>
    </td>
  </tr>

</table>

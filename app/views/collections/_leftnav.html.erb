<div id="navpane">
<div class="windowtitle">Options</div>

<ul class="listmain">
  <li>
    <%= link_to 'New collection', :action=> 'new',:page=>params[:page] %>
  </li>
  <li>
    <a href="" onclick="var hasConfirmed = confirm('Are you sure you would like to delete the selected collections?');
                              if(hasConfirmed) {
                                formId = 'list_items_form'
                                form = $(formId)
                                form.writeAttribute('action', '/projects/<%= params[:project_id] %>/collections/delete_selected');
                                form.writeAttribute('method', 'post');
                                document.getElementById(formId).submit();
                              }; return false;">Delete Selected</a>
  </li>
</ul>
<%#= render :partial => "shared/selected_list" %>
</div>



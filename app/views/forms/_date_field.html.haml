%table.date_field{ cellpadding: "0", cellspacing: "0", border: "0" }
  %tbody
    %tr
      %td
        %input.w4em{ type: "text", id: "#{attribute_name}_Y", name: "#{object_name}[#{attribute_name}_Y]", value: date.Y, maxlength: "4" }
        %label{ for: "#{attribute_name}_Y" } YYYY
      %td
        %input.w2em{ type: "text", id: "#{attribute_name}_mm", name: "#{object_name}[#{attribute_name}_mm]", value: date.mm, maxlength: "2" }
        %label{ for: "#{attribute_name}_mm" } MM
      %td
        %input.w2em{ type: "text", id: "#{attribute_name}_dd", name: "#{object_name}[#{attribute_name}_dd]", value: date.dd, maxlength: "2" }
        %span{ id: "#{attribute_name}_button_wrapper" }
        %label{ for: "#{attribute_name}_dd" } DD
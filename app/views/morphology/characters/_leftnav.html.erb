<div class="windowtitle">Options</div>
<ul class="listmain">
  <% if controller.action_name == "index" %>
    <li>
      <%=
      link_to 'New Character', "javascript:void(0)", :onclick =>"showWindow('newchardiv'); $('character_name').focus();"
    %>
    </li>
    <li>
      <%= link_to_remote 'Add Selected To Character Group', :url => add_to_group_project_morphology_characters_path(:project_id => params[:project_id]), :method => :get %>
    </li>
    <li>
      <%= link_to 'Delete Selected', "javascript:void(0)",
        :onclick => "var hasConfirmed = confirm('Are you sure you would like to delete the selected characters?');
      if(hasConfirmed) {
        $('form_sel_list').writeAttribute('action','#{delete_selected_project_morphology_characters_path(params[:project_id])}');
        $('form_sel_list').writeAttribute('method','post');
        $('form_sel_list').submit();
        $('form_sel_list').writeAttribute('action','');
      }"
    %>
    </li>
  <% end %>
  <% if controller.action_name == "show" %>
    <li>
      <%=
      link_to 'New Character State', "javascript:void(0)", :onclick => "document.getElementById(\"newchrstatediv\").style.display = \"block\";"
    %>
    </li>
<% end %>
</ul>

    <li>
      <%= link_to 'Delete Selected', "javascript:void(0)",
        :onclick => "var hasConfirmed = confirm('Are you sure you would like to delete the selected character groups?');
        if(hasConfirmed) {
          formId = 'list_items_form'
          form = $(formId)
          form.writeAttribute('action', '/projects/"+params[:project_id]+"/chr_groups/delete_selected');
          form.writeAttribute('method', 'post');
          document.getElementById(formId).submit();
        }"%>
    </li>
  <% elsif controller.action_name == "show" %>

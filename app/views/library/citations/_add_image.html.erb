<div id="windowtitle" class="windowtitle" > 
  <span id="title" class="title">
    Add Image
  </span>
  
  <span id="closebutton" class ="closebutton" onClick="$('newimagediv').hide();">
    <%= link_to "X", "javascript:void(0)" %>
  </span>
</div>  


<%= form_for(:image, :url => project_images_path(:format => 'js'), :html => { :multipart => true, :target => 'upload_frame'}) do |f| %>

  <%= hidden_field 'options', 'image_type', 'value' => 'Library::Citation' -%>
  <%= hidden_field 'options', 'id', 'value' => @citation.id -%>
     
  <div class="formrow">
    <label for="image">Upload Image</label>    
    <span class="field">
      <%= f.file_field :attachment %>
    </span>      
  </div>    

  <div class="formrow">   
    <%= f.label :date_taken %>    
    <span class="field">              
      <%= f.date_select :date_taken %>
    </span>      
  </div>      

  <div class="submitbuttonrow">
    <%= submit_tag "Create" %>
           
  </div>
<% end %>
    
    
